{
  "metadata": [
    {
      "src": [
        {
          "src": "../src/SharpMiner/",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "SharpMiner",
      "_appTitle": "",
	  "_appFooter": "SharpMiner",
	  "_appLogoPath": "images/logo.png",
	  "_appFaviconPath": "images/favicon.png",
      "_enableSearch": true,
      "pdf": true
    }
  }
}